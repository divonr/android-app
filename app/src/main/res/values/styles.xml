<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ApI" parent="@android:style/Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@android:color/holo_blue_bright</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
        <!-- Status bar color - transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation bar color - transparent for edge-to-edge -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Window attributes -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
